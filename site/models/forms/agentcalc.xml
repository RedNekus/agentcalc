<?xml version="1.0" encoding="utf-8" ?>
<form addrulepath="/components/com_agentcalc/models/rules">
    <fieldset name="agentcalc__fieldset" label="COM_AGENTCALC_ITEM_DETAILS">
        <field
            name="price"
            type="text"
            label="COM_AGENTCALC_PRICE_LABEL"
            description="COM_AGENTCALC_PRICE_DESCRIPTION"
            class="inputbox"
            required="true"
            maxlength="14"
            pattern="([1-9]+(\d{0,2})?(\s\d{0,3}){0,2}\.\d{2})|(0\.(0[1-9]|[1-9]0|[1-9]{2}))"
        />
        <field
            name="prepayment"
            type="text"
            label="COM_AGENTCALC_PREPAYMENT_LABEL"
            description="COM_AGENTCALC_PREPAYMENT_DESCRIPTION"
            class="inputbox"
            maxlength="14"
            pattern="\d{1,3}(\s\d{0,3}){0,2}\.\d{2}"
        />
    </fieldset>
</form>